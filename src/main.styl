body {
    color: red;
}

.profile {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-flow: column;
    height: 100vh;

    .content {
        margin-top: 40px;
        color: black;
        border: 1px solid gray;
        background-color: yellow;
        border-radius: 3px;
        box-shadow: 0 0 2px gray;
    }
}

img {
    border-radius: 100%;
    width: 300px;
    height: 200px;
    box-shadow: 0 0 20px black;
}